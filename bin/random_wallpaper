#!/usr/bin/python

import os
import random

#####################################
wallpapers_path = "~/Disk/Sabare/Wallpapers/"  # An "/" at the final is required
#####################################

list_of_wallpapers = os.popen(f"ls {wallpapers_path}").read().split()

if __name__ == "__main__":
    image = random.choice(list_of_wallpapers)
    os.system(f"feh --bg-fill {wallpapers_path}{image}")
